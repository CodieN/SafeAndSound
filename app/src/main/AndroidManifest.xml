<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.elizabethwhitebaker.safeandsound">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="Safe and Sound"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity">
        </activity>
        <activity android:name=".SignInActivity">
        </activity>
        <activity android:name=".HomeScreenActivity" android:launchMode="singleTask">
        </activity>
        <activity android:name=".BuildGroupActivity">
        </activity>
        <activity android:name=".ChangeGroupActivity">
        </activity>
        <activity android:name=".CheckEventActivity">
        </activity>
        <activity android:name=".CreateEventActivity">
        </activity>
        <activity android:name=".SendMessagesActivity">
        </activity>
        <activity android:name=".StatusReportActivity">
        </activity>
    </application>
</manifest>